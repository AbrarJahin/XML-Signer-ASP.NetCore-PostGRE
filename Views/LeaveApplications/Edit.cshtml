@model XmlSigner.Data.Models.LeaveApplication
@using XmlSigner.Data.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LeaveApplication</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" disabled />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveStart" class="control-label"></label>
                <input asp-for="LeaveStart" disabled type="text" placeholder="Click to set start-date" class="form-control">
                <span asp-validation-for="LeaveStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveEnd" class="control-label"></label>
                <input asp-for="LeaveEnd" disabled type="text" placeholder="Click to set start-date" class="form-control">
                <span asp-validation-for="LeaveEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveType" class="control-label"></label>
                <select asp-for="LeaveType" asp-items="Html.GetEnumSelectList<LeaveType>()" class="form-control" disabled>
                    <option disabled>-- Please Select Application Status --</option>
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PurposeOfLeave" class="control-label"></label>
                <textarea asp-for="PurposeOfLeave" class="form-control" disabled></textarea>
                <span asp-validation-for="PurposeOfLeave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressDuringLeave" class="control-label"></label>
                <textarea asp-for="AddressDuringLeave" class="form-control" disabled></textarea>
                <span asp-validation-for="AddressDuringLeave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNoDuringLeave" class="control-label"></label>
                <input asp-for="PhoneNoDuringLeave" class="form-control" disabled/>
                <span asp-validation-for="PhoneNoDuringLeave" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ApplicationStatus" class="control-label"></label>
                <select asp-for="ApplicationStatus" asp-items="Html.GetEnumSelectList<ApplicationStatus>()" class="form-control">
                    <option disabled>-- Please Select Application Status --</option>
                </select>
                <span asp-validation-for="ApplicationStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Application" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
